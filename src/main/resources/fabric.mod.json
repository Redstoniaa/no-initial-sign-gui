{
  "schemaVersion": 1,
  "id": "${id}",
  "version": "${version}",

  "name": "${name}",
  "description": "Stops the sign GUI from showing up upon initial placement of a sign.",
  "authors": [
    "Redstonia"
  ],
  "contact": {
    "homepage": "https://github.com/Redstoniaa/no-initial-sign-gui",
    "sources": "https://github.com/Redstoniaa/no-initial-sign-gui"
  },

  "license": "CC0-1.0",
  "icon": "assets/nsigui/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "nsigui.NoSignInitialGuiMod::init"
    ]
  },
  "mixins": [
    "nsigui.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": ">=1.20",
    "java": ">=17"
  }
}
